# Dongle configuration - central role
if SHIELD_SKREECUSTOM_DONGLE

config ZMK_KEYBOARD_NAME
    default "Skree Custom"

config ZMK_SPLIT_ROLE_CENTRAL
    default y

config ZMK_SPLIT_BLE_CENTRAL_PERIPHERALS
    default 2

endif

# Left and right halves - common peripheral configs
if SHIELD_SKREECUSTOM_LEFT || SHIELD_SKREECUSTOM_RIGHT

config ZMK_SLEEP
    default y

config SPI
    default y

config PMW3610
    default y

config PMW3610_SWAP_XY
    default y

config PMW3610_REPORT_INTERVAL_MIN
    default 8

config ZMK_RGB_UNDERGLOW_EXT_POWER
    default n

config ZMK_KSCAN_MATRIX_WAIT_BEFORE_INPUTS
    default 0

config ZMK_KSCAN_MATRIX_WAIT_BETWEEN_OUTPUTS
    default 1

config ZMK_RGB_UNDERGLOW
    default y
    imply WS2812_STRIP

endif

# All shields - common split and pointing configs
if SHIELD_SKREECUSTOM_LEFT || SHIELD_SKREECUSTOM_RIGHT || SHIELD_SKREECUSTOM_DONGLE

config ZMK_SPLIT
    default y

config ZMK_POINTING
    default y

config ZMK_POINTING_SMOOTH_SCROLLING
    default n

endif
