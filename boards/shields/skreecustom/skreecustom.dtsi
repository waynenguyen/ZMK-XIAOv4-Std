#include <dt-bindings/zmk/matrix_transform.h>
#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>

 / {
     chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

 
     default_transform: keymap_transform_0 {
         compatible = "zmk,matrix-transform";
        columns = <12>;
         rows = <7>;

    map = <
                                                                                                                                
    RC(0,0)   RC(0,1)   RC(0,2)   RC(0,3)   RC(0,4)   RC(0,5)         			RC(0,6)   RC(0,7)   RC(0,8)   RC(0,9)   RC(0,10)  RC(0,11)  
    RC(1,0)   RC(1,1)   RC(1,2)   RC(1,3)   RC(1,4)   RC(1,5)         			RC(1,6)   RC(1,7)   RC(1,8)   RC(1,9)   RC(1,10)  RC(1,11)  
    RC(2,0)   RC(2,1)   RC(2,2)   RC(2,3)   RC(2,4)   RC(2,5)         			RC(2,6)   RC(2,7)   RC(2,8)   RC(2,9)   RC(2,10)  RC(2,11)  
    RC(3,0)   RC(3,1)   RC(3,2)   RC(3,3)   RC(3,4)   RC(3,5) RC(4,0)	        RC(3,6)   RC(3,7)   RC(3,8)   RC(3,9)   RC(3,10)  RC(3,11)  

    							  RC(5,0)   RC(5,1)   RC(5,2)                   RC(5,6)   RC(5,7)   RC(5,8)   
                                  RC(5,3)   RC(5,4)   RC(5,5)                   RC(5,10)  RC(5,9)             

    >;
};


    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
	wakeup-source;
        diode-direction = "col2row";
        row-gpios
             = <&gpio0 28 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  //r1-7 0.03 0.28 1.01 0.09 0.10 1.11 1.15thumbs
            , <&gpio1 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
            , <&gpio0 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
            , <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
            , <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
            , <&gpio1 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
            ;

    };

    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <80>;
        status = "disabled";
    };

        right_encoder: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <20>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <20>;
    };

//right hand trackball
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        trackball_peripheral_split: trackball_peripheral_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };

    trackball_peripheral_listener: trackball_peripheral_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&trackball_peripheral_split>;
	input-processors =
	<&zip_xy_transform INPUT_TRANSFORM_X_INVERT>,
	<&zip_xy_transform INPUT_TRANSFORM_Y_INVERT>,
	<&zip_xy_transform INPUT_TRANSFORM_XY_SWAP>,
	<&zip_temp_layer 3 500>;
    };
//left hand trackball
    trackball_central_listener: trackball_central_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
	input-processors = 
	<&zip_xy_to_scroll_mapper>,
	<&zip_scroll_scaler 1 20>,
    <&zip_scroll_transform INPUT_TRANSFORM_XY_SWAP>,
	<&zip_scroll_transform INPUT_TRANSFORM_X_INVERT>;
    };
};

//disable RGB for encoder
&spi3 {
    status = "disabled";
};
